{
    "include": ["./src"],
    "exclude": ["*/dist", "dist", "build", "node_modules"],
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": false,
        "lib": ["ESNext", "DOM"],
    }
}