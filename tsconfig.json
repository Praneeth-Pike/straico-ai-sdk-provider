{
    "include": ["./src"],
    "exclude": ["*/dist", "dist", "build", "node_modules"],
    "compilerOptions": {
        "lib": ["ES2021"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": false,
        "target": "ES2021"
    }
}